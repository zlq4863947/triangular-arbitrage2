{
  "setupFilesAfterEnv": ["./jest.setup.js"],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": "/src/.*\\.(test|spec).ts$",
  "collectCoverageFrom" : ["src/**/*.{js,jsx,tsx,ts}", "!**/node_modules/**", "!**/vendor/**"],
  "coverageReporters": ["json", "lcov"],
  "verbose": true,
  "forceExit": true,
  "testEnvironment": "node"
}
